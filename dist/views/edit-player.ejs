<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Player - Football App</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/sidebar.css">
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-body p-4">
                        <h2 class="card-title mb-4">Edit Player</h2>
                        
                        <form action="/player/<%= player.id %>/edit" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label fw-bold">Name</label>
                                <input type="text" class="form-control" id="name" name="name" value="<%= player.name %>" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="position" class="form-label fw-bold">Position</label>
                                <input type="text" class="form-control" id="position" name="position" value="<%= player.position %>" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="nationality" class="form-label fw-bold">Nationality</label>
                                <input type="text" class="form-control" id="nationality" name="nationality" value="<%= player.nationality %>" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="age" class="form-label fw-bold">Age</label>
                                <input type="number" class="form-control" id="age" name="age" value="<%= player.age %>" required>
                            </div>
                            
                            <div class="mb-3">
                                <label for="description" class="form-label fw-bold">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="4" required><%= player.description %></textarea>
                            </div>
                            
                            <div class="mb-4">
                                <label for="teamId" class="form-label fw-bold">Team</label>
                                <select class="form-select" id="teamId" name="teamId" required>
                                    <% teams.forEach(team => { %>
                                        <option value="<%= team.id %>" <%= player.currentTeam.id === team.id ? 'selected' : '' %>>
                                            <%= team.name %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                            
                            <div class="d-flex mt-4">
                                <a href="/player/<%= player.id %>" class="btn btn-secondary me-2">
                                    <i class="bi bi-arrow-left me-1"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-lg me-1"></i> Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <%- include('partials/footer') %>
</body>
</html>
