<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= team.name %> - Football Cards</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin.css">
    <style>
        .team-detail {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            padding: 30px;
            margin: 20px 0;
        }
        
        .team-info h1 {
            margin-bottom: 20px;
            color: #2c3e50;
            border-bottom: 2px solid #eee;
            padding-bottom: 10px;
        }
        
        .info-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin: 20px 0;
        }
        
        @media (max-width: 768px) {
            .info-grid {
                grid-template-columns: 1fr;
            }
        }
        
        .info-item {
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
        }
        
        .label {
            font-weight: bold;
            color: #555;
            display: inline-block;
            width: 100px;
        }
        
        .value {
            color: #333;
        }
        
        .actions {
            margin: 30px 0;
        }
        
        .players-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .player-card {
            background: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            padding: 15px;
            text-align: center;
            transition: transform 0.2s;
        }
        
        .player-card:hover {
            transform: translateY(-5px);
        }
        
        .player-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 4px;
            margin-bottom: 10px;
        }
        
        .player-card h3 {
            margin: 10px 0;
            color: #333;
        }
        
        .player-card p {
            color: #666;
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="container">
        <div class="team-detail">
            <div class="team-image">
                <% if (team.imageUrl) { %>
                    <% const imagePath = team.imageUrl.startsWith('/') ? `/images/teams${team.imageUrl}` : `/images/teams/${team.imageUrl}` %>
                    <img src="<%= imagePath %>" alt="<%= team.name %>" onerror="this.src='/images/default-team.jpg'" style="max-width: 100%; height: auto; border-radius: 8px; margin-bottom: 20px; max-height: 200px;">
                <% } else { %>
                    <img src="/images/default-team.jpg" alt="<%= team.name %>" style="max-width: 100%; height: auto; border-radius: 8px; margin-bottom: 20px; max-height: 200px;">
                <% } %>
            </div>
            
            <div class="team-info">
                <h1><%= team.name %></h1>
                <div class="info-grid">
                    <div class="info-item">
                        <span class="label">Country:</span>
                        <span class="value"><%= team.country %></span>
                    </div>
                    <div class="info-item">
                        <span class="label">League:</span>
                        <span class="value"><%= team.league %></span>
                    </div>
                    <div class="info-item">
                        <span class="label">Founded:</span>
                        <span class="value"><%= team.foundedYear %></span>
                    </div>
                    <div class="info-item">
                        <span class="label">Stadium:</span>
                        <span class="value"><%= team.stadium %></span>
                    </div>
                    <div class="info-item">
                        <span class="label">Manager:</span>
                        <span class="value"><%= team.manager %></span>
                    </div>
                </div>
                
                <div class="actions">
                    <a href="/teams" class="btn btn-secondary">Back to Teams</a>
                    <% if (locals.isAuthenticated && locals.role === 'ADMIN') { %>
                        <a href="/team/<%= team.id %>/edit" class="btn btn-primary">Edit Team</a>
                    <% } %>
                </div>
                
                <h2>Players</h2>
                <div class="players-grid">
                    <% players.forEach(player => { %>
                        <div class="player-card">
                            <img src="/images/players<%= player.imageUrl %>" alt="<%= player.name %>" onerror="this.src='/images/default-player.jpg'">
                            <h3><%= player.name %></h3>
                            <p><%= player.position %></p>
                            <a href="/player/<%= player.id %>" class="btn btn-secondary">View Details</a>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </main>
    
    <%- include('partials/footer') %>
</body>
</html> 