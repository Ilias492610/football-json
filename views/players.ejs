<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Football Players</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header') %>
    
    <main class="container">
        <div class="page-header">
            <h1>Football Players</h1>
            <form action="/players" method="GET" class="search-form">
                <input
                    type="text"
                    name="search"
                    placeholder="Search by name..."
                    value="<%= searchQuery %>"
                    class="search-input"
                >
                <input type="hidden" name="sortField" value="<%= sortField %>">
                <input type="hidden" name="sortOrder" value="<%= sortOrder %>">
                <button type="submit" class="search-button">Search</button>
            </form>
        </div>
        
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>
                            <a href="/players?sortField=name&sortOrder=<%= sortField === 'name' && sortOrder === 'asc' ? 'desc' : 'asc' %>&search=<%= searchQuery %>" class="<%= sortField === 'name' ? 'active' : '' %>">
                                Name 
                                <% if (sortField === 'name') { %>
                                    <%= sortOrder === 'asc' ? '▲' : '▼' %>
                                <% } else { %>
                                    ▲
                                <% } %>
                            </a>
                        </th>
                        <th>
                            <a href="/players?sortField=position&sortOrder=<%= sortField === 'position' && sortOrder === 'asc' ? 'desc' : 'asc' %>&search=<%= searchQuery %>" class="<%= sortField === 'position' ? 'active' : '' %>">
                                Position
                                <% if (sortField === 'position') { %>
                                    <%= sortOrder === 'asc' ? '▲' : '▼' %>
                                <% } else { %>
                                    ▲
                                <% } %>
                            </a>
                        </th>
                        <th>
                            <a href="/players?sortField=currentTeam&sortOrder=<%= sortField === 'currentTeam' && sortOrder === 'asc' ? 'desc' : 'asc' %>&search=<%= searchQuery %>" class="<%= sortField === 'currentTeam' ? 'active' : '' %>">
                                Team
                                <% if (sortField === 'currentTeam') { %>
                                    <%= sortOrder === 'asc' ? '▲' : '▼' %>
                                <% } else { %>
                                    ▲
                                <% } %>
                            </a>
                        </th>
                        <th>
                            <a href="/players?sortField=nationality&sortOrder=<%= sortField === 'nationality' && sortOrder === 'asc' ? 'desc' : 'asc' %>&search=<%= searchQuery %>" class="<%= sortField === 'nationality' ? 'active' : '' %>">
                                Nationality
                                <% if (sortField === 'nationality') { %>
                                    <%= sortOrder === 'asc' ? '▲' : '▼' %>
                                <% } else { %>
                                    ▲
                                <% } %>
                            </a>
                        </th>
                        <th>
                            <a href="/players?sortField=age&sortOrder=<%= sortField === 'age' && sortOrder === 'asc' ? 'desc' : 'asc' %>&search=<%= searchQuery %>" class="<%= sortField === 'age' ? 'active' : '' %>">
                                Age
                                <% if (sortField === 'age') { %>
                                    <%= sortOrder === 'asc' ? '▲' : '▼' %>
                                <% } else { %>
                                    ▲
                                <% } %>
                            </a>
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (players.length === 0) { %>
                        <tr>
                            <td colspan="6" class="no-results">No players found</td>
                        </tr>
                    <% } else { %>
                        <% players.forEach(player => { %>
                            <tr>
                                <td><%= player.name %></td>
                                <td><%= player.position %></td>
                                <td><%= player.currentTeam.name %></td>
                                <td><%= player.nationality %></td>
                                <td><%= player.age %></td>
                                <td>
                                    <a href="/player/<%= player.id %>" class="view-button">View</a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </main>
    
    <%- include('partials/footer') %>
</body>
</html> 