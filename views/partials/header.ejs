<!-- Bootstrap JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

<div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px; height: 100vh; position: fixed; left: 0; top: 0; overflow-y: auto;">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
        <i class="bi bi-dribbble fs-4 me-2"></i>
        <span class="fs-4">Football Cards</span>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
            <a href="/" class="nav-link <%= locals.activePage === 'home' ? 'active' : 'text-white' %>" aria-current="page">
                <i class="bi bi-house-door me-2"></i>
                Home
            </a>
        </li>
        <li>
            <a href="/players" class="nav-link <%= locals.activePage === 'players' ? 'active' : 'text-white' %>">
                <i class="bi bi-person-circle me-2"></i>
                Players
            </a>
        </li>
        <li>
            <a href="/teams" class="nav-link <%= locals.activePage === 'teams' ? 'active' : 'text-white' %>">
                <i class="bi bi-people-fill me-2"></i>
                Teams
            </a>
        </li>
    </ul>
    <hr>
    <div class="dropdown">
        <% if (locals.isAuthenticated) { %>
            <div class="d-flex align-items-center text-white text-decoration-none" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-person-circle me-2"></i>
                <div>
                    <strong><%= locals.username %></strong>
                    <div><span class="badge bg-<%= locals.role === 'ADMIN' ? 'danger' : 'info' %>"><%= locals.role %></span></div>
                </div>
            </div>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" href="/profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
            </ul>
        <% } else { %>
            <div class="d-grid gap-2">
                <a href="/login" class="btn btn-outline-light">
                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                </a>
                <a href="/register" class="btn btn-primary">
                    <i class="bi bi-person-plus me-1"></i>Register
                </a>
            </div>
        <% } %>
    </div>
</div>

<!-- Top small navbar for mobile -->
<nav class="navbar navbar-dark bg-dark d-md-none">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="/">Football Cards</a>
    </div>
</nav>